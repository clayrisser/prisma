include $(MKPM)/mkpm
include mkpm.mk
-include $(MKPM)/gnu
-include main.mk

PACK_DIR := $(MKPM_TMP)/pack

.PHONY: info
info: ;

.PHONY: clean
clean:
	@$(MKCHAIN_CLEAN)
	@$(GIT) clean -fXd \
		$(MKPM_GIT_CLEAN_FLAGS)

.PHONY: purge
purge: clean
	@$(GIT) clean -fXd

.PHONY: prisma-%
prisma-%:
	@$(MAKE) -s -C prisma $(subst prisma-,,$@)

-include $(call actions)
